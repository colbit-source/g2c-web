<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">g2cloud.Presentation.WebUI</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">

    <nav class="flex-column">

        @foreach(var item in navigation.Items)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@item.Url" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @item.Text
                </NavLink>
            </div>
        }

    </nav>

</div>

@code {
   Menu navigation = new Menu();
}
